<% layout('layouts/boilerplate')%>
    <h1 class="my-4">All Study Sessions</h1>
    <ul>
        <% for (let session of sessions){%>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= session.title %>
                            </h5>
                            <p class="card-text">
                                <%= session.subject %>
                            </p>
                            <a class="btn btn-primary" href="/sessions/<%=session._id%>">View
                                <%=session.title%></a>
                        </div>
                    </div>
                </div>
            </div>
            <% }%>
    </ul>